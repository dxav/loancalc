<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dxav.loancalc.MainActivity" >

    <TextView
        android:id="@+id/textAmountOfInstallments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="0dp"
        android:text="@string/amount_of_the_installments"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/amountOfInstallments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textAmountOfInstallments"
        android:layout_toRightOf="@id/textAmountOfInstallments"
        android:textSize="@dimen/text_size_normal" />

    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAmountOfInstallments"
        android:fadingEdgeLength="20dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/installmentsTableHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/installmentNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/installment_number"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/outstanding_capital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/outstanding_capital"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/interestRepayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/interest_repayment"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/principalRepayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/principal_repayment"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/installment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/installment"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <ScrollView
                android:id="@+id/installmentsScroll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/installmentsTableHeaderInvisible"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:visibility="invisible" >

                        <TextView
                            android:layout_height="0dp"
                            android:padding="10dip"
                            android:text="@string/installment_number"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_height="0dp"
                            android:padding="10dp"
                            android:text="@string/outstanding_capital"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_height="0dp"
                            android:padding="10dp"
                            android:text="@string/interest_repayment"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_height="0dp"
                            android:padding="10dp"
                            android:text="@string/principal_repayment"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_height="0dp"
                            android:padding="10dp"
                            android:text="@string/installment"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>
            </ScrollView>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>